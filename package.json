{
  "name": "todaku-reader",
  "version": "1.0.0",
  "description": "A Tadoku-style Japanese reading app for language learners",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:clean": "node start-app.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "start:safe": "node start-server.js",
    "check-processes": "node check-processes.js",
    "test-server": "npx http-server -p 3001 --cors"
  },
  "keywords": [
    "tadoku",
    "japanese",
    "learning",
    "reading",
    "wanikani",
    "genki"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "google-auth-library": "^9.2.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
} 